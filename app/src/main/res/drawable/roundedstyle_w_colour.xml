<?xml version="1.0" encoding="utf-8"?>
<!-- combined_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape 1: Rounded Rectangle with Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E1E7E8" /> <!-- Background color -->
            <corners android:radius="16dp" />
            <size
                android:width="180dp"
                android:height="180dp" /> <!-- Adjust size as needed -->
        </shape>
    </item>

    <!-- Shape 2: Rectangle with Stroke and Rounded Corners -->
    <item android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#0D5C63" /> <!-- Stroke color and width -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>