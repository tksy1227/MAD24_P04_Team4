<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Daily_log_in_reward"
                android:textColor="#0D5C63"
                android:textSize="24sp"
                android:fontFamily="@font/alata"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_daily_to"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:fontFamily="@font/alata"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/Point_reward"
                    android:fontFamily="@font/alata"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/FriendCoins"
                    android:fontFamily="@font/alata"
                    android:textColor="@android:color/holo_green_dark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/daysLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- First row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_1" />

                        <ImageView
                            android:id="@+id/tick1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_2" />

                        <ImageView
                            android:id="@+id/tick2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_3" />

                        <ImageView
                            android:id="@+id/tick3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_4" />

                        <ImageView
                            android:id="@+id/tick4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Second row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_5" />

                        <ImageView
                            android:id="@+id/tick5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_6" />

                        <ImageView
                            android:id="@+id/tick6"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/day_background_unchecked">

                        <TextView
                            android:id="@+id/day7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/alata"
                            android:text="@string/Day_7" />

                        <ImageView
                            android:id="@+id/tick7"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/claimButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/CustomButton"
                android:text="@string/claim_today"
                android:backgroundTint="#C5D8D1"
                android:fontFamily="@font/alata"
                android:textColor="#0D5C63"
                app:strokeColor="#0D5C63"
                app:strokeWidth="1dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
